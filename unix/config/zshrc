bindkey -e

source "$HOME/dotfiles/unix/config/zsh/theme.zsh"
source "$HOME/dotfiles/unix/config/zsh/history.zsh"
source "$HOME/dotfiles/unix/config/zsh/work.zsh"

bindkey "^[[1;5C" forward-word      # Ctrl+right
bindkey "^[[1;5D" backward-word     # Ctrl+left
bindkey "^[[H"    beginning-of-line # Ctrl+a
bindkey "^[[F"    end-of-line       # Ctrl+e
bindkey "^[[3~"   delete-char       # delete

autoload -U select-word-style
select-word-style bash

# case insensitive autocompletion
autoload -Uz compinit && compinit
bindkey -M menuselect '^[[Z' reverse-menu-complete
zstyle ':completion:*' matcher-list '' 'm:{a-zA-Z}={A-Za-z}' 'r:|[._-]=* r:|=*' 'l:|=* r:|=*'

source "$HOME/dotfiles/unix/env"
if [[ "$(uname)" == "Linux" ]]; then
  source "$HOME/dotfiles/linux/env"
fi
