include-file = ~/dotfiles/linux/i3/polybar/styles

[module/i3]
type = internal/i3

pin-workspaces = false
strip-wsnumbers = true
enable-scroll = false

label-unfocused-foreground = ${colors.foreground-secundary}
label-focused-foreground = ${colors.foreground}
label-urgent-foreground = ${colors.urgent}

[module/time]
type = internal/date

interval = 1.0

date =  %H:%M

[module/date]
type = internal/date
date =  %e %B - %A
label = %date%

[module/battery]
type = internal/battery
battery = BAT1
poll-interval = 1
full-at = 95

label-discharging = %percentage%%
label-charging = %percentage%%
label-full = %percentage%%

format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
format-charging =  <label-charging>

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/pulseaudio]
type = internal/pulseaudio
interval = 5
format-volume = <ramp-volume>
label-muted = 

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/bluetooth]
type = custom/script
exec = rofi-bluetooth --status
interval = 1
click-left = rofi-bluetooth &

[module/spotify]
type = custom/script
exec = playerctl -p spotify metadata --format '{{ artist }} - {{ title }}' | awk '{print $0}'
exec-if = playerctl -l | grep spotify
label =  %output%
interval = 1
click-left = playerctl -p spotify play-pause

[module/spotify-prev]
type = custom/script
exec = echo "a"
exec-if = playerctl -l | grep spotify
label = 
click-left = playerctl -p spotify previous

[module/spotify-next]
type = custom/script
exec = echo "a"
exec-if = playerctl -l | grep spotify
label = 
click-left = playerctl -p spotify next

[module/cpu]
type = internal/cpu
label =  %percentage%%

[module/memory]
type = internal/memory
label =  %gb_used%
interval = 2

[module/temperature]
type = internal/temperature

thermal-zone = 2
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input
warn-temperature = 82

format = <ramp> <label>
label = %temperature-c%

ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/backlight]
type = internal/xbacklight
output = eDP1
enable-scroll = false
format = <ramp>
ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/kernel]
type = custom/script
exec = uname -r | cut -f1 -d"-"
label =  %output%
interval = 1024

[module/filesystem]
type = custom/script
exec = df -h /dev/nvme0n1p1 | awk '{print $4}' | tail -n 1
label =  %output%
interval = 30

[module/vpn]
type = custom/script
exec = nordvpn status | grep City | cut -d ":" -f2 | xargs
exec-if = nordvpn status | grep Uptime
label =  %output%
interval = 1
click-left = nordvpn disconnect

[module/powermenu]
type = custom/menu

label-open = 
label-open-foreground = ${colors.foreground}
label-close = x cancel
label-close-foreground = ${colors.foreground}
label-separator = " | "
label-separator-foreground = ${colors.foreground}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-2 = suspend
menu-0-2-exec = menu-open-3

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = back
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = back
menu-2-1-exec = menu-open-0

menu-3-0 = suspend
menu-3-0-exec = sudo pm-suspend
menu-3-1 = back
