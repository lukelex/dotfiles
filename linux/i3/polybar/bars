include-file = ~/dotfiles/linux/i3/polybar/modules

[bar/base]
inherit = styles
bottom = false
modules-center = i3 xset
enable-ipc = true

modules-right = spotify-prev spotify spotify-next time date

[bar/deskjaro]
inherit = bar/base

monitor = HDMI-0

modules-left = powermenu pulseaudio kernel bluetooth filesystem memory cpu core-deskjaro vpn flameshot

[bar/surfjaro]
inherit = bar/base

monitor = DP1-8
monitor-fallback = eDP1

modules-left = powermenu battery pulseaudio kernel filesystem memory cpu core-surfjaro backlight wifi vpn flameshot

[bar/monsijaro]
inherit = bar/base

monitor = DP2-8
monitor-fallback = eDP1

modules-left = powermenu battery pulseaudio kernel filesystem memory cpu core-surfjaro backlight wifi vpn flameshot wifi
