ACTION=="bind", SUBSYSTEM=="hid", \
  ENV{DBUS_SESSION_BUS_ADDRESS}="unix:path=/run/user/1000/bus", \
  RUN+="/usr/bin/su lukas -c 'notify-send.py replaces-process usb-connection -t 3000 -i usb \"$env{HID_NAME}\" \"Connected\"'"

ACTION=="unbind", SUBSYSTEM=="hid", \
  ENV{DBUS_SESSION_BUS_ADDRESS}="unix:path=/run/user/1000/bus", \
  RUN+="/usr/bin/su lukas -c 'notify-send.py replaces-process usb-connection -t 3000 -i usb \" $env{HID_NAME}\" \"Disconnected\"'"
