ACTION=="bind", SUBSYSTEM=="hid", \
  ENV{DBUS_SESSION_BUS_ADDRESS}="unix:path=/run/user/1000/bus", \
  RUN+="/usr/bin/su lukas -c 'notify-send -u critical -t 3000 \"$env{HID_NAME}\" \"Connected\"'"

ACTION=="unbind", SUBSYSTEM=="hid", \
  ENV{DBUS_SESSION_BUS_ADDRESS}="unix:path=/run/user/1000/bus", \
  RUN+="/usr/bin/su lukas -c 'notify-send -u critical -t 3000 \" $env{HID_NAME}\" \"Disconnected\"'"
