#!/usr/bin/bash

set -e

source ./linux/setup/yay

# essentials
yay -S --needed --noconfirm i3-wm picom rofi ibus inetutils openssh arandr \
  polkit polkit-gnome xfce4-power-manager network-manager-applet \
  man-db wget ttf-hack noto-fonts-cjk polybar bc xwallpaper zsh \
  zsh-completions autorandr cmake jq sxhkd xautolock xord-xkill \
  imagemagick i3lock blueman flameshot fragments playerctl \
  xclip tree v4l-utils neovim fd fzf ripgrep rustup kmonad \
  kitty bat diff-so-fancy pavucontrol pipewire-jack pipewire-alsa \
  pipewire-pulse google-chrome

# non-essentials
yay -S --needed --noconfirm eww light ddcutil dropbox \
  wired 1password spotify telegram-desktop cups \
  slack-desktop zeal rofi-bluetooth-git vlc unzip unrar \
  pantheon-calculator gsimplecal tldr docker docker-compose \
  rubygems npm rofi-greenclip neofetch blanket sxiv simplescreenrecorder \
  sysstat neovide qjackctl viewnior zathura zathura-pdf-poppler \
  2> /dev/null

# Optionals
# yay -S --needed --noconfirm kicad discord curtail birdfont \

sudo yay -Sc

systemctl enable docker bluetooth NetworkManager avahi-daemon cups
systemctl start docker bluetooth NetworkManager avahi-daemon cups
