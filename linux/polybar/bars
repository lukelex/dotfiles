include-file = ~/dotfiles/linux/polybar/modules

[bar/base]
inherit = styles
bottom = false
enable-ipc = true

modules-left = powermenu i3 xset spotify
modules-center = time date

[bar/deskjaro]
inherit = bar/base

monitor = HDMI-0

modules-right = webcam capslock vpn flameshot fingerprint dropbox bluetooth pulseaudio filesystem backlight wired-network memory cpu core-deskjaro

[bar/surfjaro]
inherit = bar/base

monitor = DP1-8
monitor-fallback = eDP1

modules-right = webcam capslock vpn flameshot bluetooth pulseaudio filesystem backlight wifi battery

[bar/monsijaro]
inherit = bar/base

monitor = DP2

modules-right = webcam capslock vpn flameshot bluetooth pulseaudio filesystem backlight wifi battery
