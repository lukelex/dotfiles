[module/kernel]
type = custom/script
exec = uname -r | cut -f1 -d"-"
label =  %output%
interval = 1024

[module/filesystem]
type = custom/script
exec = df -h | awk '$6 == "/"' | awk '{print $4}' | tail -n 1
label =  %output%
interval = 30
click-left = pcmanfm

[module/vpn]
type = custom/script
exec = nordvpn status | grep City | cut -d ":" -f2 | xargs
exec-if = nordvpn status | grep Uptime
label =  %output%
interval = 1
click-left = nordvpn disconnect

