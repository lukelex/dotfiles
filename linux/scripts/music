#!/usr/bin/bash

case $1 in
  show)
    playerctl -p spotify metadata --format '{{ title }}'
    ;;
  previous)
    playerctl -p spotify previous &
    ;;
  next)
    playerctl -p spotify next &
    ;;
  pause)
    playerctl -p spotify pause &
    ;;
  play)
    playerctl -p spotify play &
    ;;
  toggle)
    playerctl -p spotify play-pause &
    ;;
esac
