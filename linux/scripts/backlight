#!/bin/bash

case $1 in
  inc)
    xbacklight -inc 5%
    $($0 show)
    ;;
  dec)
    xbacklight -dec 5%
    $($0 show)
    ;;
  show)
    brightness=$(xbacklight -get | cut -f1 -d".")
    bar=$(seq -s "â”€" $(($brightness / 4)) | sed 's/[0-9]//g')

    dunstify -i sunflower \
             -r 6 \
             -u low \
             -a Backlight \
             "$brightness%" "$bar"
    ;;
esac
