#!/bin/bash

case $1 in
  inc)
    xbacklight -inc 5%
    $($0 show)
    ;;
  dec)
    xbacklight -dec 5%
    $($0 show)
    ;;
  show)
    brightness=$(xbacklight -get | cut -f1 -d".")
    bar=$(seq -s "â”€" $(($brightness / 5)) | sed 's/[0-9]//g')

    notify-send.py -i sunflower \
             -t 1000 \
             --replaces-process backlight \
             "Backlight" "$brightness% $bar"
    ;;
esac
