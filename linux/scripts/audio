#!/bin/bash

HIGH=
MEDIUM=
LOW=
MUTE=

function icon {
  value=`get`

  if [[ `is_mute` ]]; then
    echo $MUTE
  elif [[ 1 -eq $(echo "$value > 75" | bc -l) ]]; then
    echo "%{F#FF0000}$HIGH%{F-}"
  elif [[ 1 -eq $(echo "$value > 50" | bc -l) ]]; then
    echo $HIGH
  elif [[ 1 -eq $(echo "$value > 25" | bc -l) ]]; then
    echo $MEDIUM
  else
    echo $LOW
  fi
}

function turn_on {
  amixer -D pulse set Master on > /dev/null
}

function get {
  amixer get Master | grep '%' | head -n 1 | cut -d '[' -f 2 | cut -d '%' -f 1
}

function is_mute {
  amixer get Master | grep '%' | grep -oE '[^ ]+$' | grep off
}

function show {
  volume=`get`

  if is_mute ; then
    notify-send -a Volume \
                -i ~/dotfiles/fonts/fa6/pngs/light/volume-slash.png \
                -h int:value:0\
                -h string:wired-tag:volume \
                "0%"
  else
    notify-send -a Volume \
                -i ~/dotfiles/fonts/fa6/pngs/light/volume.png \
                -h int:value:"$volume" \
                -h string:wired-tag:volume \
                "$volume%"
  fi
}

case $1 in
  mic)
    case $2 in
      toggle)
        echo 'toggling mic'
        ;;
    esac
    ;;
  vol)
    case $2 in
      icon) icon ;;
      inc)
        turn_on
        amixer -D pulse sset Master 1%+ > /dev/null
        show
        ;;
      dec)
        turn_on
        amixer -D pulse sset Master 1%- > /dev/null
        show
        ;;
      set)
        amixer -D pulse sset Master $3% > /dev/null
        show
        ;;
      show) show ;;
      toggle)
        amixer -D pulse set Master 1+ toggle > /dev/null
        show
        ;;
    esac
esac
