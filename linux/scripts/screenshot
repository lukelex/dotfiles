#!/usr/bin/bash

# set -aeu
set -euo pipefail

OUTPUT_DIR="$HOME/screenshots"
mkdir -p "$OUTPUT_DIR"

GEOM="$(slurp -b '#ffffff20' -c '#00000040')" || exit 1
[ -z "$GEOM" ] && exit 1

TMP_DIR="${XDG_RUNTIME_DIR:-/tmp}"
TMPFILE="$(mktemp "$TMP_DIR/XXXXXX.png")"
OUTFILE="$OUTPUT_DIR/$(date +%m%d%Y-%I%p-%S).png"

audio_tick() {
  play "$HOME/dotfiles/sounds/camera-shutter.ogg" vol 0.35 &> /dev/null &
}

take() {
  # hyprshot --silent --mode "$1" --output-folder "$HOME/screenshots" 2&>/dev/null

  # 1) Capture selection to a real PNG file
  grim -g "$GEOM" "$TMPFILE"

  # 2) Immediately copy that image to clipboard
  wl-copy --type image/png < "$TMPFILE"

  # 3) Open the same image in satty for optional editing / copying
  satty \
    --filename "$TMPFILE" \
    --output-filename "$OUTFILE"

  # 4) Clean up temp file after satty closes
  rm -f "$TMPFILE"

  audio_tick
}

take "$1"
