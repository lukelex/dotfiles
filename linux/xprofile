#!/usr/bin/bash

export QT_QPA_PLATFORMTHEME="qt5ct"
export GTK2_RC_FILES="$HOME/.gtkrc-2.0"
export FONT_AWESOME_PATH="$DOTFILES/fonts/fa6/svgs"

# Custom binaries
export PATH="$DOTFILES/linux/bin:$PATH"

touch /tmp/wired.log

source "$DOTFILES/config/keyboard" &
source "$HOME/Dropbox/secrets" 2&> /dev/null
source "$DOTFILES/linux/config/autostart" 2&> /dev/null

# load wallpaper
if command -v u_wallpaper &> /dev/null
then
  u_wallpaper load &
fi
