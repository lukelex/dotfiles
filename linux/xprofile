#!/bin/sh

# keyboard configs
xmodmap ~/dotfiles/linux/config/keyboard.map
setxkbmap -layout us -variant mac
xset r rate 200 35

# identify and set monitor profiles
autorandr --change

# set wallpaper
xwallpaper --zoom ~/Dropbox/wallpapers/Wall268k.png

export PATH="$HOME/dotfiles/linux/bin:$PATH"

. ~/Dropbox/secrets
